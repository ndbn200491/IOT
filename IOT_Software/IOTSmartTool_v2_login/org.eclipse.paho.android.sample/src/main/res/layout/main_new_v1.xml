<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:focusable="false"
    android:background="@color/bright_foreground_disabled_material_light">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:id="@+id/linear1"
        android:background="@color/highlighted_text_material_light">

        <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="PPM"
                android:id="@+id/button"
                android:singleLine="false"
                android:textSize="12dp"
                android:focusable="false"
                android:scrollIndicators="top"
                android:outlineProvider="background"
                android:textStyle="bold"
                android:background="@drawable/ppm_icon"
                android:textColor="@color/color1"
                android:layout_alignTop="@+id/button2"
                android:layout_toRightOf="@+id/button2"
                android:layout_toEndOf="@+id/button2"
                android:layout_marginLeft="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="PH+/-"
                android:id="@+id/button2"
                android:textSize="20dp"
                android:layout_alignTop="@+id/button"
                android:textColorHighlight="#ffffff"
                android:background="@drawable/icon_ph_1"
                android:textStyle="bold"
                android:textColor="@color/color1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="7dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ĐỘ ẨM"
                android:id="@+id/button3"
                android:textSize="12dp"
                android:background="@drawable/humd_icon"
                android:textStyle="bold"
                android:layout_alignTop="@+id/button4"
                android:layout_toRightOf="@+id/button4"
                android:layout_toEndOf="@+id/button4"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="NHIỆT ĐỘ"
                android:id="@+id/button4"
                android:textSize="12dp"
                android:background="@drawable/temp_ic"
                android:textStyle="bold"
                android:layout_alignTop="@+id/button"
                android:layout_toRightOf="@+id/button"
                android:layout_toEndOf="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below = "@+id/linear1">

        <android.support.v4.app.FragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/color8"
            >
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/shadow_2"
                />
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </android.support.v4.app.FragmentTabHost>
    </LinearLayout>

</RelativeLayout>