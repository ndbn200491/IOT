<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:focusable="false"
    android:background="@color/bright_foreground_disabled_material_light">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/greentura_channel_icon"
        android:layout_below="@+id/linear1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center">

        <android.support.v4.app.FragmentTabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/greentura_channel_icon"
            >
            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/color2"


                />
            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </android.support.v4.app.FragmentTabHost>



    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:id="@+id/linear1"
        android:background="@drawable/host_tab1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_height="100dp">

        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="NHIỆT ĐỘ"
                android:id="@+id/TBtn"
            android:background="@drawable/temp_ic"
                android:textStyle="bold"
            android:layout_alignTop="@+id/PHBtn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="12dp"
            android:textSize="17sp"
            android:textColor="#e74c3c" />

        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="ĐỘ ẨM"
                android:id="@+id/DABtn"
            android:background="@drawable/humd_icon"
                android:textStyle="bold"
            android:layout_alignTop="@+id/PHBtn"
            android:layout_toLeftOf="@+id/TBtn"
            android:layout_toStartOf="@+id/TBtn"
            android:textSize="17sp"
            android:textColor="@color/color6"
            android:layout_marginLeft="12dp" />

        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="PPM"
                android:id="@+id/PPMBtn"
                android:singleLine="false"
            android:focusable="false"
                android:scrollIndicators="top"
                android:outlineProvider="background"
            android:textSize="17sp"
                android:textStyle="bold"
                android:background="@drawable/ppm_icon"
                android:textColor="@color/color6"
            android:layout_marginLeft="17dp"
            android:textAlignment="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp" />

        <Button
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="PH+/-"
                android:id="@+id/PHBtn"
            android:textColorHighlight="#ffffff"
                android:background="@drawable/icon_ph_1"
                android:textStyle="bold"
                android:textColor="@color/color4"
            android:layout_marginLeft="13dp"
            android:textSize="17sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/PPMBtn"
            android:layout_toEndOf="@+id/PPMBtn"
            android:layout_marginStart="13dp" />

    </RelativeLayout>


</RelativeLayout>