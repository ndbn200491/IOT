<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="org.eclipse.paho.android.sample.activity.MessagesFragment"
    android:layout_marginTop="56dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignBottom="@+id/subscription_list_view"
        android:layout_marginTop="0dp"
        ></LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/subscription_list_view"
        android:textSize="20dp"

        android:cacheColorHint="@color/color2"
        android:choiceMode="singleChoice"
        android:layout_alignBottom="@+id/progressBar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Time 00:00"
        android:textColor="@color/color6"
        android:id="@+id/timeData"
        android:background="@color/color2"
        android:textSize="15dp"

        android:layout_below="@+id/subscription_list_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8" />

    <View
        android:id="@+id/divider1"
        style="@style/Divider"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/textView8" /> <!-- *************************************************************************-->

    <TextView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sensor Data:"
        android:background="@color/color2"
        android:textColor="@color/bright_foreground_material_light"
        android:id="@+id/textView8"

        android:layout_below="@+id/subscription_list_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:textSize="30dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........(%)"
        android:id="@+id/humiData"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/humiDatadsds"
        android:layout_alignTop="@+id/humiDatadsds"
        android:layout_toRightOf="@+id/textView7"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/divider2"
        style="@style/Divider"
        android:layout_below="@+id/textView8"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Setup"
        android:id="@+id/subscribe_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/title_bar" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Humidity:"
        android:textSize="20dp"
        android:id="@+id/humiDatadsds"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........(C degree)"
        android:id="@+id/tempData"
        android:textSize="20dp"
        android:layout_above="@+id/divider4"
        android:layout_alignLeft="@+id/humiData"
        android:layout_alignStart="@+id/humiData"
        android:layout_below="@+id/divider3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/divider3"
        style="@style/Divider"
        android:layout_below="@+id/humiDatadsds"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Temp:"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/humiDatadsds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/humiDatadsds"
        android:layout_alignEnd="@+id/humiDatadsds" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........(+/-)"
        android:textSize="20dp"
        android:id="@+id/PHData"
        android:layout_below="@+id/tempData"
        android:layout_alignLeft="@+id/tempData"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <View
        android:id="@+id/divider4"
        style="@style/Divider"
        android:layout_below="@+id/textView3"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PH+/-:"
        android:textSize="20dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/divider4"
        android:layout_alignLeft="@+id/divider4"
        android:layout_alignStart="@+id/divider4"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />
    <View
        android:id="@+id/divider5"
        style="@style/Divider"
        android:layout_below="@+id/textView4"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="EC       :"
        android:textSize="18dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="...........(uS)"
        android:textSize="18dp"
        android:id="@+id/ecVal"
        android:layout_below="@+id/divider5"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_toStartOf="@+id/progressBar" />
    <View
        android:id="@+id/divider6"
        style="@style/Divider"
        android:layout_below="@+id/textView5"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PPM   :"
        android:textSize="18dp"
        android:id="@+id/textViewPPM"
        android:layout_below="@+id/divider6"
        android:layout_alignLeft="@+id/divider6"
        android:layout_alignStart="@+id/divider6"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />
    <View
        android:id="@+id/divider7"
        style="@style/Divider"
        android:layout_above="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" /> <!-- *************************************************************************-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Some Others Info:................................."
        android:textSize="18dp"
        android:id="@+id/textView6"
        android:background="@color/button_material_light"
        android:layout_below="@+id/waterLv"
        android:layout_alignLeft="@+id/waterLv"
        android:layout_alignStart="@+id/waterLv"
        android:layout_alignRight="@+id/waterLv"
        android:layout_alignEnd="@+id/waterLv" />
    <View
        android:id="@+id/divider8"
        style="@style/Divider"
        android:layout_below="@+id/textViewPPM"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp" /> <!-- *************************************************************************-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exclusion Status:"
        android:textSize="20dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/divider9"
        android:layout_alignLeft="@+id/divider9"
        android:layout_alignStart="@+id/divider9" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK (or not ok)"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/divider7"
        android:layout_alignRight="@+id/textView6"
        android:layout_alignEnd="@+id/textView6" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Refresh"
        android:id="@+id/btnRefresh"
        android:layout_below="@+id/timeData"
        android:layout_alignBottom="@+id/divider2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="7dp"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/timeData"
        android:layout_alignStart="@+id/timeData" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..............."
        android:id="@+id/ppmVal"
        android:layout_below="@+id/divider6"
        android:layout_alignLeft="@+id/ecVal"
        android:layout_alignStart="@+id/ecVal"
        android:layout_above="@+id/divider8"
        android:textSize="18dp"
        android:textIsSelectable="false"
        android:layout_alignRight="@+id/divider6"
        android:layout_alignEnd="@+id/divider6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Water Level:"
        android:id="@+id/waterLv"
        android:layout_alignTop="@+id/divider8"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignLeft="@+id/divider8"
        android:layout_alignStart="@+id/divider8"
        android:layout_alignRight="@+id/divider9"
        android:layout_alignEnd="@+id/divider9" />

    <View
        android:id="@+id/divider9"
        style="@style/Divider"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignTop="@+id/checkBox"
        android:layout_marginLeft="10dp" />

    <!-- *************************************************************************-->





</RelativeLayout>